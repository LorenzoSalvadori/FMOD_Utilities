studio.menu.addMenuItem({
	name: "Create new Event",
	keySequence: "Ctrl+E",

	execute: function(){
		var eventName = studio.system.getText("Please enter the event name", "newEvent");
		if (eventName === null)
			return 0;
		
		// check if an event with that name already exists
		// if it does than concatenate with _i

		//create new event
		var newEvent = studio.project.create("Event");
		newEvent.name = eventName;
		newEvent.folder = eventFolder;
		newEvent.mixerInput.Output = studio.project.workspace.mixer.masterBus;


		// create empty track in event
		var newTrack = studio.project.create("GroupTrack");
		newTrack.mixerGroup.Output = newEvent.mixer.masterBus;
		newTrack.mixerGroup.name = "Audio 1";

		// assign track to event
		newEvent.relationships.groupTracks.add(newTrack);

		// create dummy param
		var p_dummy = studio.project.create("GameParameter");
		p_dummy.name = "dummy";
		p_dummy.minimum = 0;
		p_dummy.maximum = 1;
		p_dummy.event = newEvent;

	}

})